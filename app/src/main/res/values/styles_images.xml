<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImageView"/>

    <style name="ImageView.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageView.Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.Wrapped.Logo" parent="ImageView.Wrapped">
        <item name="android:src">@drawable/ic_logo</item>
    </style>

</resources>