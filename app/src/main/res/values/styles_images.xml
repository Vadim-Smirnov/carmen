<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ImageView"/>

    <style name="ImageView.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageView.Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.WrappedWidth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ImageView.Wrapped.Logo" parent="ImageView.Wrapped">
        <item tools:targetApi = "LOLLIPOP" name="android:transitionName">logo_transition</item>
        <item name="android:src">@drawable/ic_logo</item>
         <item name="android:layout_centerVertical">true</item>
         <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ImageView.Wrapped.Logo2" parent="ImageView.Wrapped">
        <item tools:targetApi = "LOLLIPOP" name="android:transitionName">logo_transition</item>
        <item name="android:src">@drawable/ic_logo_2</item>
    </style>

    <style name="ImageView.BottomNavigationItem" parent="ImageView.Base">
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingTop">13dp</item>
    </style>

</resources>