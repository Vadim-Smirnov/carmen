<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayout"/>

    <style name="LinearLayout.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearLayout.Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.Vertical" parent="LinearLayout.Base">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout.Horizontal" parent="LinearLayout.Base">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearLayout.Wrapped.Horizontal" parent="LinearLayout.Wrapped">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearLayout.Wrapped.Vertical" parent="LinearLayout.Wrapped">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout.WrappedHeight.Vertical" parent="LinearLayout.WrappedHeight">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout.WrappedHeight.Horizontal" parent="LinearLayout.WrappedHeight">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FragmentContainer" parent="LinearLayout.Base"/>

    <style name="LinearLayout.Sign" parent="LinearLayout.Base">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- Toolbar -->
    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="AppBarLayout.Transparent" parent="AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppBarLayout.ToolbarBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="AppBarLayout.Toolbar" parent="AppBarLayout.ToolbarBase">
        <item name="android:background">@color/colorPrimary</item>
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="AppBarLayout.Toolbar.Transparent" parent="AppBarLayout.Toolbar">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppBarLayout.Gallery">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/company_detail_parallax_toolbar_height</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="CollapsingToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="CollapsingToolbarLayout.Gallery" parent="CollapsingToolbarLayout">
        <item name="android:fitsSystemWindows">true</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="contentScrim">@color/colorPrimary</item>
    </style>

    <style name="RelativeLayout"/>

    <style name="RelativeLayout.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="RelativeLayout.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RelativeLayout.WrappedWidth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="RelativeLayout.Gallery" parent="RelativeLayout.Base">
        <item name="layout_collapseMode">parallax</item>
    </style>

    <style name="GalleryDecorator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/company_detail_parallax_toolbar_gradient_height
        </item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="GalleryDecorator.Top" parent="GalleryDecorator">
        <item name="android:background">@drawable/gallery_gradient_top</item>
    </style>

    <style name="GalleryDecorator.Bottom" parent="GalleryDecorator">
        <item name="android:background">@drawable/gallery_gradient_bottom</item>
    </style>

    <style name="ConstraintLayout"/>

    <style name="ConstraintLayout.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ConstraintLayout.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ConstraintLayout.Base.Focusable" parent="ConstraintLayout.Base">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="NestedScrollView"/>

    <style name="NestedScrollView.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="NestedScrollView.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CoordinatorLayout"/>

    <style name="CoordinatorLayout.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ScrollView"/>

    <style name="ScrollView.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ScrollView.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Include"/>

    <style name="Include.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Include.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerLayout"/>

    <style name="DrawerLayout.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LayoutDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorSeparate</item>
    </style>


    <style name="FrameLayout"/>

    <style name="FrameLayout.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="FrameLayout.Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FrameLayout.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>