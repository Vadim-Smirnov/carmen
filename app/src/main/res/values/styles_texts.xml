<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextView" />

    <style name="TextView.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextView.Base.OpenSans" parent="TextView.Base">
        <item name="fontPath">@string/open_sans_font</item>
    </style>

    <!-- Text View Wrapped Height -->

    <style name="TextView.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.WrappedHeight.OpenSans" parent="TextView.WrappedHeight">
        <item name="fontPath">@string/open_sans_font</item>
    </style>

    <style name="TextView.WrappedHeight.OpenSansSemibold" parent="TextView.WrappedHeight">
        <item name="fontPath">@string/open_sans_semibold_font</item>
    </style>

    <!--Text View Wrapped-->

    <style name="TextView.Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Wrapped.OpenSans" parent="TextView.Wrapped">
        <item name="fontPath">@string/open_sans_font</item>
    </style>

    <style name="TextView.Wrapped.WhiteColor" parent="TextView.Wrapped">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextView.Wrapped.WhiteColor.Avenir" parent="TextView.Wrapped.WhiteColor">
        <item name="android:alpha">0.5</item>
        <item name="fontPath">@string/avenir_book_font</item>
    </style>

    <style name="TextView.Wrapped.OpenSans.WhiteColor" parent="TextView.Wrapped.OpenSans">
        <item name="android:textColor">@color/colorWhite</item>
    </style>



    <style name="TextView.SignMessage" parent="TextView.Wrapped.WhiteColor.Avenir">
        <item name="android:textSize">@dimen/sign_up_text_size</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="TextView.SignAction" parent="TextView.SignMessage">
        <item name="android:alpha">1</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextView.Toolbar.Title" parent="TextView.Wrapped">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="fontPath">@string/open_sans_font</item>
    </style>

    <style name="TextView.Toolbar.Subtitle" parent="TextView.Toolbar.Title">
        <item name="android:alpha">0.5</item>
        <item name="android:textSize">@dimen/toolbar_subtitle_text_size</item>
        <item name="android:gravity">bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextView.DialogTitle" parent="TextView.WrappedHeight.OpenSans">
        <item name="android:layout_marginStart">@dimen/choose_city_text_view_margin_start</item>
        <item name="android:layout_marginTop">@dimen/choose_city_text_view_margin_top</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/choose_city_text_size</item>
    </style>

    <style name="TextView.Header" parent="TextView.WrappedHeight.OpenSansSemibold">
        <item name="android:textColor">@color/colorTextHeader</item>
        <item name="android:textSize">@dimen/company_detail_text_size</item>
    </style>

    <style name="TextView.DetailHeader" parent="TextView.Header">
        <item name="android:layout_marginEnd">@dimen/company_detail_margin_side</item>
        <item name="android:layout_marginStart">@dimen/company_detail_margin_side</item>
    </style>

    <style name="TextView.DialogButton" parent="TextView.Base.OpenSans">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#4a4a4a</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/category_dialog_item_title_text_size</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

</resources>