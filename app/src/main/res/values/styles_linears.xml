<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LinearLayout" />

    <style name="LinearLayout.Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="LinearLayout.Wrapped">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.WrappedHeight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayout.Sign" parent="LinearLayout.Base">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorBlack</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

</resources>