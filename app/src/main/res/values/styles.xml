<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontPath">@string/pacifico_font</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Navigation view -->
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/menu_item_text_size</item>
        <item name="fontPath">@string/open_sans_font</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/menu_item_height</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:textScaleX">0.9</item>
    </style>

</resources>
