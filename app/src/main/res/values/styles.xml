<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Auth Activity Theme. -->
    <style name="AuthTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#fff</item>

        <item name="android:actionMenuTextAppearance">@style/ActionMenuTextAppearance</item>
        <item name="android:actionMenuTextColor">#7fffffff</item>
    </style>

    <!-- Auth Toolbar -->

    <style name="ActionMenuTextAppearance">
        <item name="android:textSize">@dimen/skip_text_size</item>
    </style>

    <style name="AuthTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontPath">@string/avenir_book_font</item>
    </style>

    <style name="AuthTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <!-- Toolbar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontPath">@string/pacifico_font</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Navigation view -->
    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">@dimen/menu_item_text_size</item>
        <item name="fontPath">@string/open_sans_font</item>
        <item name="android:listPreferredItemHeightSmall">@dimen/menu_item_height</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:textScaleX">0.9</item>
    </style>

    <style name="DialogStyle" parent="Base.ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="ListItemAppearance">
        <item name="android:layout_margin">25dp</item>
    </style>

</resources>
