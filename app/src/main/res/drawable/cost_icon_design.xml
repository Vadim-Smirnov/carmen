<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorWhite" />
            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />
            <stroke
                android:width="0.5dp"
                android:color="#FF9B9B9B" />
        </shape>
    </item>

    <item android:id="@+id/button_color">
        <shape android:shape="oval">
            <solid android:color="#3EC7C2" />
        </shape>
    </item>

</layer-list>