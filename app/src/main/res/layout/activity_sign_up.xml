<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="net.ginteam.carmen.view.activity.auth.SignInActivity"
    tools:ignore="MissingPrefix">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_view_skip"
                fontPath="@string/avenir_book_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/skip_margin"
                android:layout_marginTop="@dimen/skip_margin"
                android:alpha="0.5"
                android:text="@string/skip_view_string"
                android:textColor="#ffffff"
                android:textSize="@dimen/skip_text_size"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/image_view_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/skip_bottom_space"
                android:src="@drawable/ic_logo"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_skip"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                fontPath="@string/avenir_book_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/field_horizontal_space"
                android:layout_marginStart="@dimen/field_horizontal_space"
                android:layout_marginTop="@dimen/logo_bottom_space"
                android:hint="@string/email_hint_string"
                android:paddingBottom="@dimen/field_bottom_padding"
                android:textColorHint="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_view_logo">

                <EditText
                    android:id="@+id/edit_text_email"
                    fontPath="@string/avenir_book_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/field_drawable_padding"
                    android:drawableStart="@drawable/ic_email"
                    android:textColor="#fff"
                    android:textSize="@dimen/field_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/input_field_border"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_email"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                fontPath="@string/avenir_book_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/field_horizontal_space"
                android:layout_marginStart="@dimen/field_horizontal_space"
                android:layout_marginTop="@dimen/email_field_bottom_space"
                android:hint="@string/password_hint_string"
                android:paddingBottom="@dimen/field_bottom_padding"
                android:textColorHint="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_email">

                <EditText
                    android:id="@+id/edit_text_password"
                    fontPath="@string/avenir_book_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/field_drawable_padding"
                    android:drawableStart="@drawable/ic_password"
                    android:textColor="#fff"
                    android:textSize="@dimen/field_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/input_field_border"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_password"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_confirm_password"
                fontPath="@string/avenir_book_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/field_horizontal_space"
                android:layout_marginStart="@dimen/field_horizontal_space"
                android:layout_marginTop="@dimen/email_field_bottom_space"
                android:hint="@string/confirm_password_hint_string"
                android:paddingBottom="@dimen/field_bottom_padding"
                android:textColorHint="#fff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_password">

                <EditText
                    android:id="@+id/edit_text_confirm_password"
                    fontPath="@string/avenir_book_font"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:background="#00000000"
                    android:drawablePadding="@dimen/field_drawable_padding"
                    android:drawableStart="@drawable/ic_password"
                    android:textColor="#fff"
                    android:textSize="@dimen/field_text_size"/>

            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/input_field_border"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_confirm_password"/>

            <Button
                android:id="@+id/button_sign_up"
                fontPath="@string/avenir_book_font"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/button_horizontal_margin"
                android:layout_marginStart="@dimen/button_horizontal_margin"
                android:layout_marginTop="@dimen/password_field_bottom_space"
                android:background="@drawable/sign_in_button_border"
                android:text="@string/sign_up_string"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="@dimen/sign_in_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_layout_confirm_password"/>

            <TextView
                android:id="@+id/text_view_have_account"
                fontPath="@string/avenir_book_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sign_up_bottom_space"
                android:layout_marginTop="@dimen/sign_in_google_bottom_space"
                android:alpha="0.5"
                android:text="@string/have_account_string"
                android:textColor="#fff"
                android:textSize="@dimen/sign_up_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_sign_up"/>

            <TextView
                android:id="@+id/text_view_sign_in"
                fontPath="@string/avenir_book_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/sign_up_left_space"
                android:text="@string/sign_in_label_string"
                android:textColor="#fff"
                android:textSize="@dimen/sign_up_text_size"
                app:layout_constraintBaseline_toBaselineOf="@+id/text_view_have_account"
                app:layout_constraintLeft_toRightOf="@+id/text_view_have_account"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</LinearLayout>
