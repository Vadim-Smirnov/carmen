<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             tools:ignore="MissingPrefix"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical"
                                             android:paddingTop="@dimen/category_dialog_item_top_padding"
                                             android:paddingBottom="@dimen/category_dialog_item_bottom_padding"
                                             android:background="#fff">

    <TextView
        android:id="@+id/text_view_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/category_dialog_item_title_text_size"
        android:textColor="#1D1D26"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Автомобиль"
        tools:layout_editor_absoluteY="0dp"/>

    <TextView
        tools:text="25 items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_category_items_count"
        android:layout_marginTop="@dimen/category_dialog_item_title_bottom_space"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_category_name"
        fontPath="@string/avenir_book_font"/>

    <View
        android:layout_width="@dimen/category_dialog_item_separator_width"
        android:layout_height="@dimen/category_dialog_item_separator_height"
        android:background="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@+id/text_view_category_items_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/category_dialog_item_subtitle_bottom_space"
        android:id="@+id/view"/>

    <ImageView
        android:layout_width="@dimen/category_dialog_item_image_width"
        android:layout_height="@dimen/category_dialog_item_image_height"
        app:srcCompat="@drawable/ic_category_car"
        android:id="@+id/image_view_category_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/category_dialog_item_separator_bottom_space"
        app:layout_constraintTop_toTopOf="@+id/view"/>

</android.support.constraint.ConstraintLayout>