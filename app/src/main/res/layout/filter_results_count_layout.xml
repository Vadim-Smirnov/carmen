<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearLayout.WrappedHeight.Vertical"
    android:background="#000"
    android:gravity="center"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/text_view_show_results"
        style="@style/TextView.Wrapped.OpenSans.WhiteColor"
        android:layout_marginTop="@dimen/show_result_title_margin_top"
        android:text="@string/show_results_string"
        android:textSize="@dimen/show_result_text_size"/>

    <TextView
        android:id="@+id/text_view_filters_result_count"
        style="@style/TextView.Wrapped.OpenSans"
        android:layout_marginBottom="@dimen/results_count_margin_bottom"
        android:layout_marginTop="@dimen/results_count_margin_top"
        android:text="@string/results_count_string"
        android:textColor="#9B9B9B"
        android:textSize="@dimen/results_count_text_size"/>

    <ProgressBar
        android:id="@+id/progress_bar_filter"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/results_count_margin_bottom"
        android:layout_marginTop="@dimen/results_count_margin_top"
        android:progressDrawable="@drawable/white_progress_bar"
        android:visibility="gone"/>

</LinearLayout>