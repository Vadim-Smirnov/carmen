<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout.WrappedHeight.Horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_marginBottom="@dimen/service_item_margin_bottom">

    <ImageView
        style="@style/ImageView.WrappedWidth"
        android:layout_marginStart="@dimen/service_item_image_margin_side"
        android:layout_marginEnd="@dimen/service_item_image_margin_side"
        android:src="@drawable/ic_arrow_right"/>

    <TextView
        android:id="@+id/text_view_service_name"
        style="@style/TextView.Header"
        fontPath="@string/open_sans_light_font"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Ильич чайковский СТО"/>

</LinearLayout>