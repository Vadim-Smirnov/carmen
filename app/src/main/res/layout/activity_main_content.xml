<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              style="@style/LinearLayout.Vertical">

    <include layout="@layout/toolbar"/>

    <android.support.design.widget.CoordinatorLayout
        style="@style/CoordinatorLayout.Base">

        <FrameLayout
            android:id="@+id/main_fragment_container"
            style="@style/FragmentContainer"/>

        <net.ginteam.carmenfloatbutton.FloatingActionMenu
            android:id="@+id/floating_action_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            fab:layout_behavior="net.ginteam.carmen.view.adapter.FloatMenuBehavior"
            fab:menu_animationDelayPerItem="100"
            fab:menu_backgroundColor="#B3000000"
            fab:menu_colorNormal="#3EC7C2"
            fab:menu_colorPressed="#4EC7C2"
            fab:menu_icon="@drawable/fab_add"
            fab:menu_labels_colorNormal="#fff"
            fab:menu_labels_colorPressed="#99ffffff"
            fab:menu_labels_colorRipple="#66FFFFFF"
            fab:menu_labels_cornerRadius="4dp"
            fab:menu_labels_textColor="#000"
            fab:menu_labels_textSize="12.5sp"/>

    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>