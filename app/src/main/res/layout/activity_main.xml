<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    style="@style/DrawerLayout.Base"
    tools:openDrawer="start">

    <include
        style="@style/Include.Base"
        layout="@layout/activity_main_content" />

    <include layout="@layout/navigation_view_layout" />

    <!--<com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout-->
        <!--android:id="@+id/float_button_layout"-->
        <!--style="@style/FloatButtonLayout.Base">-->

        <!--<com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton-->
            <!--xmlns:rfab="http://schemas.android.com/apk/res-auto"-->
            <!--android:id="@+id/float_button_main"-->
            <!--style="@style/FloatButton.Main"-->
            <!--android:visibility="gone"/>-->

    <!--</com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>-->

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        fab:menu_colorNormal="#3EC7C2"
        fab:menu_colorPressed="#4EC7C2"
        fab:menu_animationDelayPerItem="100"
        fab:menu_icon="@drawable/ic_car_service_floating"
        fab:menu_labels_textColor="#000"
        fab:menu_labels_textSize="12.5sp"
        fab:menu_labels_cornerRadius="4dp"
        fab:menu_labels_colorNormal="#fff"
        fab:menu_labels_colorPressed="#99ffffff"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_backgroundColor="#B3000000">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_size="normal"
            android:src="@drawable/ic_location"
            fab:fab_label="Menu item 228"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitXY"/>

    </com.github.clans.fab.FloatingActionMenu>

</android.support.v4.widget.DrawerLayout>
