<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ConstraintLayout.WrappedHeight"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/text_view_city_name"
        style="@style/TextView.Header"
        fontPath="@string/open_sans_light_font"
        android:layout_marginBottom="@dimen/city_item_margin_bottom"
        android:layout_marginEnd="@dimen/city_item_vertical_margin"
        android:layout_marginStart="@dimen/city_item_vertical_margin"
        android:layout_marginTop="@dimen/city_item_margin_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Кривой Рог"/>

    <View
        android:id="@+id/view_payment_methods_bottom_separate"
        style="@style/LayoutDivider"
        android:layout_marginTop="@dimen/city_item_margin_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_city_name"/>

</android.support.constraint.ConstraintLayout>